
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [ "es6" ],
    "types": [ "node", "mocha" ],
    "rootDir": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ]
}